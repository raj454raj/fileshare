<h1>File Upload</h1>
<%= form_for :attachment, url: user_files_path, :html => { :multipart => true } do |f| %>
  <%= render 'shared/errors', object: @attachment %>
  <p>
    <%= f.label :file_name %><br>
    <%= f.text_field :file_name, required: true %>
  </p>

  <p>
    <%= f.label :public %><br>
    <%= f.check_box :public, checked:true %>
  </p>

  <p>
    <%= f.label :doc %><br>
    <%= f.file_field :doc, required: true %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
