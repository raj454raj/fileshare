<!DOCTYPE html>
<html>
<head>
  <title>Fileshare</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% if session[:user_id].nil? %>
  <a href="<%= url_for(controller: 'users', action: 'new') %>">Sign Up</a>
  <a href="<%= url_for(controller: 'sessions', action: 'new') %>">Login</a>
<% else %>
  <%= link_to "Logout", logout_path, method: 'delete' %>
<% end %>
<%= yield %>
</body>
</html>
